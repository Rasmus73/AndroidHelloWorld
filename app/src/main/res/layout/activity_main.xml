<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Krabat.AndroidHelloWorld.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:onClick="sendMessage"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/myEditText"
        app:layout_constraintStart_toEndOf="@+id/myEditText" />

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="325dp"
        android:layout_height="39dp"
        android:layout_marginTop="84dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/myEditText"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/myEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>